{
  "name": "Water me!!",
  "version": "0.0.2",
  "manifest_version": 2,
  "options_page": "options.html",
  "description": "I will force you to drink water",
  "browser_action": {
    "default_title": "Water Force Reminder!"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://*/*","http://*/*"],
      "css": ["style.css"],
      "js": ["water_content.js"]
    }
  ],
  "web_accessible_resources": [
    "water.jpg"
  ]
}
